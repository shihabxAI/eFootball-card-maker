<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EpicActivity">

    <include
        android:id="@+id/epic_toolbar"
        layout="@layout/toolbar_layout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- FrameLayout-এর পরিবর্তে ConstraintLayout ব্যবহার করুন -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_preview_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/main_bg"
        app:layout_constraintTop_toBottomOf="@id/epic_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="57:80"
        app:layout_constraintWidth_percent="0.75">


        <!-- মাঝখানে একটি ভার্টিকাল গাইডলাইন -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vertical_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />


        <!-- প্রথম প্লেয়ারের ছবি (বাম দিকে) -->
        <ImageView
            android:id="@+id/preview_player_image_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitCenter"
            android:contentDescription="@string/player_image_1_description"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/vertical_guideline" />

        <!-- imgElement1 এখন overlay হবে -->
        <ImageView
            android:id="@+id/imgElement1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/elmnt2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <!-- দ্বিতীয় প্লেয়ারের ছবি (ডান দিকে) -->
        <ImageView
            android:id="@+id/preview_player_image_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitCenter"
            android:contentDescription="@string/player_image_2_description"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/vertical_guideline"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- ========= নতুন কোড শেষ ========= -->

        <!-- الإطار -->
        <ImageView
            android:id="@+id/img_frame"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/frame"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vertical_guideline_top_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horizontal_guideline_top_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="-0.02" />

        <!-- التقييم -->
        <TextView
            android:id="@+id/preview_rating_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/efootball_stencil_regular"
            android:text="@string/previewRating"
            android:textColor="@color/white"
            android:textSize="56sp"
            app:layout_constraintStart_toStartOf="@id/vertical_guideline_top_left"
            app:layout_constraintTop_toTopOf="@id/horizontal_guideline_top_left" />

        <TextView
            android:id="@+id/preview_position_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/efootball_bold"
            android:text="@string/previewPosition"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_preview_position_name"
            app:layout_constraintStart_toStartOf="@id/preview_rating_vertical"
            app:layout_constraintEnd_toEndOf="@id/preview_rating_vertical"
            app:layout_constraintTop_toBottomOf="@id/preview_rating_vertical"
            android:layout_marginTop="-18dp" />
        <ImageView
            android:id="@+id/imgFlagStroke"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/bd_flag"
            app:tint="@color/white"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintWidth_percent="0.20"
            app:layout_constraintStart_toStartOf="@id/preview_position_vertical"
            app:layout_constraintEnd_toEndOf="@id/preview_position_vertical"
            app:layout_constraintTop_toBottomOf="@id/preview_position_vertical"
            android:layout_marginTop="@dimen/padding_small"
            android:contentDescription="@null" />

        <ImageView
            android:id="@+id/imgFlag"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="1dp"
            android:scaleType="fitCenter"
            android:src="@drawable/bd_flag"
            app:layout_constraintStart_toStartOf="@id/imgFlagStroke"
            app:layout_constraintEnd_toEndOf="@id/imgFlagStroke"
            app:layout_constraintTop_toTopOf="@id/imgFlagStroke"
            app:layout_constraintBottom_toBottomOf="@id/imgFlagStroke"
            android:contentDescription="@string/flag_image_desc" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horizontal_guideline_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.80" />

        <!-- اسم اللاعب -->
        <TextView
            android:id="@+id/preview_player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/efootball_bold"
            android:text="@string/preview_default_player_name"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_preview_position_name"
            app:layout_constraintBottom_toTopOf="@id/horizontal_guideline_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

 <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/card_preview_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
 <include
            android:id="@+id/controls"
            layout="@layout/layout_card_editor_controls" />


    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
